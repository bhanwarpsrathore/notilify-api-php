{
    "name": "bhanwarpsrathore/notilify-api-php",
    "description": "A PHP wrapper for Notilify's SMS API. ",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "notilify", "sms api", "bulk sms", "otp"
    ],
    "homepage": "https://github.com/bhanwarpsrathore/notilify-api-php",
    "authors": [
        {
            "name": "Pradeep Singh",
            "email": "bhanwarpsrathore@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.0",
        "graham-campbell/guzzle-factory": "^7.0"
    },
    "require-dev": {
        "pestphp/pest": "^2.30",
        "pestphp/pest-plugin-type-coverage": "*"
    },
    "autoload": {
        "psr-4": {
            "NotilifyAPI\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NotilifyAPI\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
